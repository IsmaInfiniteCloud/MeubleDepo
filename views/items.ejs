<div class="containers">
  <h1>Liste des Items</h1>
  <br>
 
  <div class="button-container" style="margin-top: 0px !important;">
    <a href="/new-activity" class="button btn-primary">Ajouter un item</a>
  </div>
  <br>
  <table class="table">
    <thead>
      <tr>
        <th>item</th>
        <th>Prix</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% for (let item of items) { %>
        <tr>
          <td><a style="font-weight: 800;" href="/item/<%= item._id %>"><%= item.title %></a></td>
          <td style="text-align:center ;color: #ff6347;font-weight: 600;"><%= item.price %></td>
          <td style="text-align: center;"><a href="/item/update/<%= item._id %>" class="button btn-edit">Modifier</a></td>
        </tr>
      <% } %>
    </tbody>
  </table>

</div>
<style>
  h1 {
    font-size: 55px;
    padding-bottom: 0px;
    font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;
    font-weight: bold;
    color: tomato;
  }

  .containers {
    display: flex;
    text-align: center;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  .table {
    border-collapse: collapse;
    width: 60%;
    margin-bottom: 1em;
  }

  .table thead th {
    font-size: 20px;
    text-align: center;
    font-weight: bold;
    background-color: #4c99e6;
    border: 1px solid #dee2e6;
    padding: 0.75em;
  }

  .table tbody tr:nth-child(even) {
    background-color: #f2f2f2;
  }

  .table tbody tr:hover {
    background-color: #ddd;
  }

  .table td {
    border: 1px solid #dee2e6;
    padding: 0.75em;
  }

  a {
    color: rgb(44, 21, 220);
    text-decoration: none;
    padding: 0.5em 1em;
    border-radius: 0.5em;
  }

  .button-container {
    display: flex;
    justify-content: center
    
  }

  .btn-edit, .btn-primary {
    font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;
    font-style: italic;
    color: white;
    font-size: 20px;
    border-radius: 4px;
    font-weight: bold;
  }

  .btn-edit {
    background-color: #ff6347;
    border-color: #080125;
  }
  .btn-primary {
    color: #fff;
    background-color: #007bff;
    border-color: #007bff;
  }
  
  .btn-primary:hover {
    color: #fff;
    background-color: #0056b3;
    border-color: #004c99;
  }
</style>

